            <div class="entry-edit-head"><h4><?php echo Mage::helper('sales')->__('Order Totals') ?></h4></div>
            <div id="order-totals" class="order-totals"><?php echo $this->getChildHtml('totals') ?></div>
        </div>
        <div class="clear"></div>
    </td>
</tr>
</table>
